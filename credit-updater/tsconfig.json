{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "module": "node16",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}


